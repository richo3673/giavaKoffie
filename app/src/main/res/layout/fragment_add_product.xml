<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDD1C3"
    android:clipChildren="false"
    android:scrollbars="vertical">

    <ImageView
        android:id="@+id/backbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="31dp"
        android:src="@drawable/ic_back"
        app:tint="#967259" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="24dp"
        android:layout_toRightOf="@id/backbutton"
        android:text="Add Product"
        android:textColor="#212121"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/productname"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/title"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="48dp"
        android:layout_marginRight="27dp"
        android:background="@drawable/rounded6"
        android:hint="Product Name"
        android:padding="10dp"
        android:paddingLeft="11.74dp"
        android:paddingBottom="16dp"
        android:textColor="#1D1D1D"
        android:textColorHint="#1D1D1D"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/stock"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/productname"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="40px"
        android:layout_marginRight="27dp"
        android:background="@drawable/rounded6"
        android:hint="Stock"
        android:padding="10dp"
        android:paddingLeft="11.74dp"
        android:paddingBottom="16dp"
        android:textColor="#1D1D1D"
        android:textColorHint="#1D1D1D"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/stock"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="40px"
        android:layout_marginRight="27dp"
        android:background="@drawable/rounded6"
        android:hint="Price"

        android:padding="10dp"
        android:paddingLeft="11.74dp"
        android:paddingBottom="16dp"
        android:textColor="#1D1D1D"
        android:textColorHint="#1D1D1D"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/price"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="40px"
        android:layout_marginRight="27dp"
        android:background="@drawable/rounded6"
        android:hint="Description"
        android:padding="10dp"
        android:paddingLeft="11.74dp"
        android:paddingBottom="16dp"
        android:textColor="#1D1D1D"
        android:textColorHint="#1D1D1D"
        android:textSize="14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="41dp"
        android:text="Tambah Foto"
        android:textColor="#455A64"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/addimage"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_below="@id/description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="93dp"
        android:background="@drawable/rounded15"
        android:src="@drawable/ic_camera"/>

    <Button
        android:id="@+id/save"
        android:layout_width="223dp"
        android:layout_height="42dp"
        android:layout_below="@id/addimage"
        android:text="SAVE"
        android:textAllCaps="false"
        android:layout_marginTop="21dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#967259"/>
</RelativeLayout>